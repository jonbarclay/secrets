# Secret Vault Configuration
# Copy this file to .env and fill in the required values

# REQUIRED: Fernet encryption key (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
SECRET_FERNET_KEY=

# Redis connection string
SECRET_REDIS_URL=redis://redis:6379/0

# Frontend origin for CORS (update for production domain)
SECRET_FRONTEND_ORIGIN=https://localhost

# Default TTL for time-based secrets (seconds)
SECRET_DEFAULT_TTL_SECONDS=3600

# Fallback TTL for one-time secrets (seconds)
SECRET_ONE_TIME_FALLBACK_TTL_SECONDS=604800

# Backend port (internal)
SECRET_BACKEND_PORT=8443

# TLS certificate paths (for local development; use proper certs in production)
TLS_CERT_FILE=/certs/localhost.crt
TLS_KEY_FILE=/certs/localhost.key

# Frontend API base URL
VITE_API_BASE=https://localhost/api

# Frontend port
FRONTEND_PORT=5173
